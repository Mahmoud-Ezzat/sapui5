<mvc:View
    controllerName="sap.ui.demo.walkthrough.controller.InvoiceList"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc">
    <List
        id="invoiceList"
        headerText="{i18n>invoiceListTitle}"
        class="saUiResponsiveMargin"
        width="auto"
        items="{invoice>/Invoices}">
        <headerToolbar>
            <Toolbar>
                <Title text="{i18n>invoiceListTitle}" />
                <ToolbarSpacer />
                <SearchField width="50%" search=".onFilterInvoices" />
            </Toolbar>
        </headerToolbar>
        <items>
            <ObjectListItem
                press=" onListItemPress"
                type="Active"
                title="{invoice>ProductName}">

                <ObjectAttribute text="{invoice>shippmentPlace}" />
                <ObjectAttribute text="{invoice>ShippedDate}" />
            </ObjectListItem>

        </items>


        <dependents>
            <Dialog id="myDialog"
                title="item details"
                type="Message"
            >
                <VBox renderType="Bare">
                    <Label text="{invoice>ProductName}" />
                    <!-- <Input value="{invoice>ProductName}" /> -->
                </VBox>
                <beginButton>
                    <Button
                        text="Cancel"
                        press=".onCancelPress"
                    />
                </beginButton>
                <endButton>
                    <Button
                        text="OK"
                        press=".onOkPress"
                    />
                </endButton>
            </Dialog>
        </dependents>



    </List>


</mvc:View>